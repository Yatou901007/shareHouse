@font-face {
  font-family: 'sl-font';  
  src: url('https://at.alicdn.com/t/font_1176148_b6fcwdlhahp.eot');
  src: url('https://at.alicdn.com/t/font_1176148_b6fcwdlhahp.eot?#iefix') format('embedded-opentype'),
  url('https://at.alicdn.com/t/font_1176148_b6fcwdlhahp.woff2') format('woff2'),
  url('https://at.alicdn.com/t/font_1176148_b6fcwdlhahp.woff') format('woff'),
  url('https://at.alicdn.com/t/font_1176148_b6fcwdlhahp.ttf') format('truetype'),
  url('https://at.alicdn.com/t/font_1176148_b6fcwdlhahp.svg#iconfont') format('svg');
}
.sl-font {
  font-family: "sl-font" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.sl-down:before {
  content: "\E61A";
}
.sl-up:before {
  content: "\E61C";
}
.select-tab {
	border-top: #ccc 1rpx solid;
	border-bottom: #ccc 1rpx solid;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	position:fixed;
	height:80rpx;
	top:0;
	width:100vw;
	z-index:99;
	/* background:#F6F7F8; */
	background:#EEEEEE;
}
.arrows {
	margin-left: 5rpx;
}
.select-tab .select-tab-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	border-radius: 40rpx;
	/* border: 1rpx solid #ccc; */
	margin: 10rpx 10rpx;
	background: #fff;
}
.select-tab .select-tab-item text {
	color: #333;
	font-weight: bold;
	font-size: 28rpx;
}
